    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 man">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%=listing._id%>" class="list_decoration">
        <div class="card listing-card">
          <img src="<%=listing.image.url%>" class="card-img-top" style="height:20rem;width:10rem" alt="">
          <div class="card-img-overlay"></div>
          <div class="card-body">
              <h5><%=listing.title%></h5>
              <!-- <p>
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
                
                <i class="tab-info"><%=listing.price%>*0.18</i>
              </p> -->
              <p>
  <span class="price-base">&#8377;<%= listing.price.toLocaleString("en-IN") %></span>
  <span class="price-tax" style="display: none;">
    &#8377;<%= Math.round(listing.price * 1.18).toLocaleString("en-IN") %>
  </span>
  <!-- <i class="tab-info">+ 18% GST</i> -->
</p>

              
              
            </div>
          </div> 
        </a>
        <% } %>
    
    </div>
    <script>
  const toggle = document.getElementById("flexSwitchCheckDefault");
  toggle.addEventListener("change", function () {
    const basePrices = document.querySelectorAll(".price-base");
    const taxPrices = document.querySelectorAll(".price-tax");

    if (this.checked) {
      basePrices.forEach(el => el.style.display = "none");
      taxPrices.forEach(el => el.style.display = "inline");
    } else {
      basePrices.forEach(el => el.style.display = "inline");
      taxPrices.forEach(el => el.style.display = "none");
    }
  });
</script>

   
 

