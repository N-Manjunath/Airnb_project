    <script>
  const toggle = document.getElementById("flexSwitchCheckDefault");
  toggle.addEventListener("change", function () {
    const basePrices = document.querySelectorAll(".price-base");
    const taxPrices = document.querySelectorAll(".price-tax");

    if (this.checked) {
      basePrices.forEach(el => el.style.display = "none");
      taxPrices.forEach(el => el.style.display = "inline");
    } else {
      basePrices.forEach(el => el.style.display = "inline");
      taxPrices.forEach(el => el.style.display = "none");
    }
  });
 document.querySelectorAll('#filters .filter a').forEach(link => {
  link.addEventListener('mousedown', function(event) {
    this.closest('.filter').classList.toggle('active');
  });
});

</script>

   
 

