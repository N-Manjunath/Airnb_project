  <script>
    let tab=document.getElementById("flexSwitchCheckDefault");
    tab.addEventListener("click",()=>
  {
    let tabs=document.getElementsByClassName("tab-info");
    for(let tab of tabs){
      if(tab.style.display!="inline")
    {
      tab.style.display="inline";
    }
    else{
      tab.style.display="none";
    }
    }
  })
  </script>