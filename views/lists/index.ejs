<%layout('layout/boilerplate')-%>
  <body>
  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter
    {
      margin:1rem 0rem 1rem 2rem;
      text-align: center;
      opacity: 0.7;
    }
    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }
    .tab-switch
    {
      display: flex;
      border:1px solid rgba(0, 0, 0, 0.283);
      border-radius: 1rem;
      padding: 0.5rem;
      height: 3rem;
      margin-left: 10rem;
    }
    .tab-info
    {
      display: none;
    }
  </style>
  <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-bed"></i>     
       <p>Rooms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-water-ladder"></i> 
           <p>Amazing pools</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain-sun"></i>    
        <p>Moutain View</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-sailboat"></i>
      <p>boats</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tree"></i>
      <p>Tropical</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-city"></i>
      <p>Top cities</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-baseball-bat-ball"></i>
      <p>play</p>
    </div>
    <div class="tab-switch">
    <div class="form-check form-switch form-check-reverse">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">show with taxes</label>
    </div>
  </div>
  </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 man">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%=listing._id%>" class="list_decoration">
        <div class="card listing-card">
          <img src="<%=listing.image.url%>" class="card-img-top" style="height:20rem;width:10rem" alt="">
          <div class="card-img-overlay"></div>
          <div class="card-body">
              <h5><%=listing.title%></h5>
              <p>
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
                
                <i class="tab-info">+ 18% GST</i>
              </p>
              
              
            </div>
          </div> 
        </a>
        <% } %>
    
    </div>
   
 

    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->

  </body>
  <script>
    let tab=document.getElementById("flexSwitchCheckDefault");
    tab.addEventListener("click",()=>
  {
    let tabs=document.getElementsByClassName("tab-info");
    for(let tab of tabs){
      if(tab.style.display!="inline")
    {
      tab.style.display="inline";
    }
    else{
      tab.style.display="none";
    }
    }
  })
  </script>